{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": { "$ref": "#/definitions/id" },
    "type": {
      "default": ["VerifiableCredential"],
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/knownTypes"
              },
              { "type": "string" }
            ],
            "uniqueItems": true
          }
        }
      ]
    },
    "issuer": {
      "oneOf": [{ "$ref": "#/definitions/id" }, { "$ref": "#/definitions/identifier" }]
    },
    "credentialStatus": {
      "$ref": "#/definitions/identifierAndType"
    },
    "credentialSubject": {
      "oneOf": [
        { "type": "object" },
        {
          "type": "array",
          "items": { "type": "object" }
        }
      ]
    },
    "expirationDate": { "type": "string", "format": "date-time" },
    "issuanceDate": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "issuer", "issuanceDate", "credentialSubject"],
  "definitions": {
    "knownTypes": {
      "type": "string",
      "enum": ["VerifiableCredential", "VerifiablePresentation"]
    },
    "id": { "type": "string", "format": "uri" },
    "identifier": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/id" }
      },
      "required": ["id"]
    },
    "identifierAndType": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/id" },
        "type": { "type": "string" }
      },
      "required": ["id", "type"]
    }
  }
}
